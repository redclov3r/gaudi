<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}gaudi{% endblock %}</title>
        {{ "/styles/gaudi.css" | asset_url | stylesheet_tag }}
        <!-- TODO: Complete this project :) -->
        {{ "/scripts/libs/modernizr-2.6.2.js" | asset_url | script_tag }}
    </head>
    <body class="wrapper">
		<header class="mainheader cf">
			<form class="searchform">
				{% comment %}<label for="subreddit">/r/</label>{% endcomment %}
                <select id="listing-type">
                    <option value="r/" selected>/r/</option>
                    <option value="s/">/s/</option>
                    <option value="u/">/u/</option>
                </select>
				<input type="text" id="listing-value" placeholder="pics" />
				<input type="submit" id="open-btn" value="OPEN" class="btn" />
			</form>
			<a class=mainheader__link href="#">
                <h1>gaudi</h1>
                <h2>a HTML5 reddit reader</h2>
			</a>
		</header>
        <div class="container">
            {% block content %}{% endblock %}
        </div>
		{% include 'templates' %}
        {{ "/scripts/libs/jquery-1.8.3.min.js" | asset_url | script_tag }}
        {{ "/scripts/libs/underscore.js" | asset_url | script_tag }}
        {{ "/scripts/libs/backbone.js" | asset_url | script_tag }}
        {{ "/scripts/libs/handlebars-1.0.rc.1.js" | asset_url | script_tag }}
        {{ "/scripts/libs/spin.min.js" | asset_url | script_tag }}

        {{ "/scripts/main.js" | asset_url | script_tag }}

		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-37498668-1']);
			_gaq.push(['_trackPageview']);

			(function() {
			 var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			 ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			 var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			 })();
		 </script>
    </body>
</html>
