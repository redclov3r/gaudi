{% raw %}
<script id="listing-item-template" type="text/x-handlebars-template">
    <li class="listing__item media" data-name="{{name}}">
    <img class="media__img listing__item__thumbnail" src="{{thumbnail}}" />
    <p class="media__body">
        <a href="{{url}}" class="listing__item__link">
            {{title}}
        </a>
        <small>
            <a href="{{url}}" target="_blank" title="open in new tab">
                ({{domain}})
            </a>
        </small>
        <br />
        <small>
            <b>{{author}}</b> posted this
            {{date created_utc}},
            <b>{{score}}</b> Points,
            <a href="http://reddit.com{{permalink}}" class="internal">{{num_comments}}</a> Comments
        </small>
    </p>
    </li>
</script>
<script id="error-template" type="text/x-handlebars-template">
    <div class="error">
        <h3>There was an error loading <code>{{url}}</code>.</h3>
        <p>This may have several reasons but most probably <code>{{url}}</code> does not allow to be rendered in an <code>&lt;iframe&gt;</code>.</p>
        <p><a href="{{url}}" class="btn" target="_blank">Open <em>{{url}}</em> in new tab instead</a></p>
    </div>
</script>
{% endraw %}
